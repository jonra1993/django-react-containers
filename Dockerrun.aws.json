{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "_django_backend",
      "host": {
        "sourcePath": "/var/app/current/django_backend"
      }
    }, 
    {
      "name": "_react_frontend",
      "host": {
        "sourcePath": "/var/app/current/react-frontend"
      }
    },      
    {
      "name": "_config_template",
      "host": {
        "sourcePath": "/var/app/current/nginx-config-files/app.nginx.template"
      }
    },
    {
      "name": "_nginx_conf",
      "host": {
        "sourcePath": "/var/app/current/nginx-config-files/nginx.conf"
      }
    }      

  ],
  "containerDefinitions": [
    {
      "name": "django",
      "image": "jrtec/django-video-inspections",
      "essential": true,
      "memory": 300,
      "command": [
          "sh",
          "-c",
          "python manage.py makemigrations && python manage.py migrate && gunicorn django_backend.wsgi:application --bind 0.0.0.0:8000"
      ],      
      "portMappings": [
          {
              "containerPort": 8000,
              "hostPort": 5050
          }
      ],      
      "mountPoints": [
        {
          "sourceVolume": "_django_backend",
          "containerPath": "/code",
          "readOnly": true
        }
      ]
    },  
    {
      "name": "node",
      "image": "jrtec/node-container",
      "essential": true,
      "memory": 200,
      "command": [
          "sh",
          "-c",
          "yarn install && yarn build && yarn server"
      ],      
      "portMappings": [
          {
              "containerPort": 8081,
              "hostPort": 3000
          }
      ],      
      "mountPoints": [
        {
          "sourceVolume": "_react_frontend",
          "containerPath": "/code",
          "readOnly": true
        }
      ]
    },        
    {
      "name": "nginx",
      "image": "nginx:1.19.10",
      "essential": true,
      "memory": 128,    
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 8080
        }
      ],
      "links": [
        "django",
        "node"
      ],
      "mountPoints": [
        {
          "sourceVolume": "_config_template",
          "containerPath": "/etc/nginx/templates/app.nginx.template"
        },
        {
          "sourceVolume": "_nginx_conf",
          "containerPath": "/etc/nginx/nginx.conf",
          "readOnly": true
        }
      ]
    }
  ]
}